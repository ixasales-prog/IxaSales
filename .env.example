# ==============================================================================
# IXASALES ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your values

# ==============================================================================
# DATABASE
# ==============================================================================
DATABASE_URL=postgres://user:password@localhost:5432/ixasales

# ==============================================================================
# AUTHENTICATION
# ==============================================================================
# JWT Secret - MUST be at least 32 characters for security
# Generate with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ==============================================================================
# APP CONFIGURATION
# ==============================================================================
PORT=3000
NODE_ENV=development
# For production: NODE_ENV=production
API_URL=https://api.ixasales.com
CORS_ORIGIN=http://localhost:5173

# ==============================================================================
# REDIS (for production rate limiting)
# ==============================================================================
# If not set, falls back to in-memory rate limiting (not recommended for production)
# REDIS_URL=redis://localhost:6379

# ==============================================================================
# TELEGRAM BOT
# ==============================================================================
# These are fallback values - can also be configured via admin UI
# and stored in database for persistence
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_DEFAULT_CHAT_ID=
TELEGRAM_WEBHOOK_SECRET=

# Note: Tenant-specific bot tokens are stored in the tenants table
# and configured through the tenant admin interface

# ==============================================================================
# PUSH NOTIFICATIONS (Web Push)
# ==============================================================================
# Generate VAPID keys with: npx web-push generate-vapid-keys
# VAPID_PUBLIC_KEY=
# VAPID_PRIVATE_KEY=
# VAPID_SUBJECT=mailto:admin@yourcompany.com

# ==============================================================================
# PAYMENT GATEWAYS
# ==============================================================================
# Click Payment
# CLICK_SERVICE_ID=
# CLICK_MERCHANT_ID=
# CLICK_SECRET_KEY=

# Payme Payment
# PAYME_MERCHANT_ID=
# PAYME_SECRET_KEY=

# ==============================================================================
# FILE STORAGE
# ==============================================================================
STORAGE_TYPE=local
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY=
S3_SECRET_KEY=

# ==============================================================================
# SECURITY (PRODUCTION)
# ==============================================================================
# Set to 'true' to disable HTTPS redirect (not recommended)
# DISABLE_HTTPS_REDIRECT=false

# ==============================================================================
# LOGGING
# ==============================================================================
# Log level: debug, info, warn, error
# LOG_LEVEL=info

